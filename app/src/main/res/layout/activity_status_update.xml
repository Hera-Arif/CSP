<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.csp.StatusUpdateActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_su_prev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Previou Image"
        android:textSize="22sp"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_su_prev"
        android:layout_width="match_parent"
        android:layout_height="175dp" />
<Button
    android:id="@+id/btn_su_capture_image"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text= "Capture New Image"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ProgressBar
        android:id="@+id/update_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_su_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Image"
        android:textSize="22sp"/>
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_su_new"
        android:layout_width="match_parent"
        android:layout_height="175dp" />

    <Button
        android:id="@+id/btn_su_upload_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "Upload New Image"/>

</LinearLayout>
